  "panels": [
    {
      "datasource": "Prometheus",
      "description": "Uso de CPU (%) basado en node_exporter. Mide el uso total considerando idle, system y user.",
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "title": "CPU Usage (%)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU {{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "description": "Memoria usada en bytes (total - disponible). Basado en node_exporter.",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "title": "Memoria Usada",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Mem Used {{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "description": "Uso del filesystem raíz. node_exporter expone varios filesystem, este filtra el principal.",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 6 },
      "id": 3,
      "title": "Uso de Disco (Filesystem /)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_free_bytes{mountpoint=\"/\"}",
          "legendFormat": "Disk Used {{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "description": "Monitorea tráfico entrante y saliente en bytes/seg.",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 6 },
      "id": 4,
      "title": "Network RX/TX",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m])",
          "legendFormat": "RX {{instance}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[5m])",
          "legendFormat": "TX {{instance}}",
          "refId": "B"
        }
      ]
    },
    {
      "datasource": "Prometheus",
      "description": "Load average 1m, 5m y 15m. Útil para detectar saturación del sistema.",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 },
      "id": 5,
      "title": "Load Average",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "Load 1m",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "Load 5m",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "Load 15m",
          "refId": "C"
        }
      ]
    },
    {
      "datasource": "Loki",
      "description": "Logs del sistema recolectados por Promtail desde /var/log/*.log",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 18 },
      "id": 6,
      "title": "Logs del Sistema (Loki)",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=\"system-logs\"}",
          "refId": "A"
        }
      ]
    }
  ],
